{
    "name": "litepie/shield",
    "description": "A production-ready Laravel role and permission-based access control system",
    "keywords": [
        "laravel",
        "permission",
        "role",
        "acl",
        "access-control",
        "authorization",
        "guard",
        "policy",
        "security"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Litepie",
            "email": "info@litepie.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/contracts": "^10.0|^11.0",
        "illuminate/auth": "^10.0|^11.0",
        "illuminate/cache": "^10.0|^11.0",
        "illuminate/console": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/framework": "^10.0|^11.0",
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Shield\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Shield\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Shield\\ShieldServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
